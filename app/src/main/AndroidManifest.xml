<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homeworkhelper"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.SecondTest">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/files" />
        <activity
            android:name="com.example.homeworkhelper.history.HistoryDisplayActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SecondTest.NoActionBar">

        </activity>
        <activity
            android:name="com.example.homeworkhelper.result.ResultDisplayActivity"
            android:exported="true"
            android:theme="@style/Theme.Result">
        </activity>
        <activity
            android:name=".mainPage.MainPageActivity"
            android:exported="true"
            android:theme="@style/Theme.Result"
            ></activity>
        <activity
            android:name=".login.LoginMain"
            android:exported="true"
            android:theme="@style/Theme.Result">
        </activity>
        <activity android:name=".login.PrivacyAgreement"
            android:exported="true"
            android:theme="@style/Theme.Result">
        </activity>
        <activity android:name=".login.UserRead">
            android:exported="true"
            android:theme="@style/Theme.Result">
        </activity>
        <activity android:name=".login.checkLogin"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.homeworkhelper.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files" />
        </provider>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
</manifest>